<div class="col-md-6 col-md-offset-3">
    <table class="table table-striped">
        <thead>
        <tr class="row">
            <th class="col-md-3">Category</th>
            <th class="col-md-3">Filter Term</th>
        </tr>
        </thead>
        <tbody>
        {{#each filter}}
            <tr class="row">
                <td class="col-md-6">{{catName}}</td>
                <td class="col-md-6">{{filterTerm}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    <form action="/filter"
          class="form-inline"
          method="post">
        <div class="form-group">
            <label for="term">Add Filter</label>
            <input type="text" class="form-control" id="term" name="term" placeholder="Enter Filter Term">
            <select name="catId">
                {{#each cats}}
                    <option value="{{catId}}">{{catName}}</option>
                {{/each}}
            </select>
        </div>
        <button type="submit" class="btn btn-default col-md-offset-1">Submit</button>
    </form>
</div>